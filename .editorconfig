; http://editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true

[**.{js,jsx,css,scss,sass,php}]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{**.{phtml,htm,html},composer.json}]
charset = utf-8
indent_style = space
indent_size = 4

[{package.json,.travis.yml}]
charset = utf-8
indent_style = space
indent_size = 2
